// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String @id @default(uuid())
  title       String
  description String
  type        String
}

model User {
  id                        String    @id @default(uuid())
  username                  String
  email                     String    @unique
  // password is optional bcoz of Oauth
  password                  String?
  isVerified                Boolean   @default(false)
  isAdmin                   Boolean   @default(false)
  image                     String?
  forgotpasswordtoken       String?
  forgotpasswordtokenexpiry DateTime?
  verifyemailtoken          String?
  verifyemailtokenexpiry    DateTime?
}

model City {
  id         String  @id @default(uuid())
  name       String  @unique
  postalcode Int?
  country_id String  @unique
  country    Country @relation(fields: [country_id], references: [id])
  Cinema     Cinema?
}

model Country {
  id   String @id @default(uuid())
  name String
  city City?
}

model Cinema {
  id         String @id @default(uuid())
  branchname String
  streetname String
  city_id    String @unique
  city       City   @relation(fields: [city_id], references: [id])
}

model Movie {
  id       String  @id @default(uuid())
  title    String
  edition  Int     @default(1)
  duration Float
  Genre    Genre[]
  cast     Cast[]

  @@unique([title, edition])
}

model Cast {
  id      String  @id @default(uuid())
  name    String
  role    Role    @relation(fields: [role_id], references: [id])
  role_id String  @unique
  movies  Movie[]
}

model Role {
  id   String @id @default(uuid())
  role String @unique
  cast Cast?
}

model Genre {
  id    String  @id @default(uuid())
  name  String  @unique
  Movie Movie[]
}
