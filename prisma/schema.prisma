// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        String      @id @default(uuid())
  username                  String
  email                     String      @unique
  // password is optional bcoz of Oauth
  password                  String?
  isVerified                Boolean     @default(false)
  isAdmin                   Boolean     @default(false)
  image                     String?
  forgotpasswordtoken       String?
  forgotpasswordtokenexpiry DateTime?
  verifyemailtoken          String?
  verifyemailtokenexpiry    DateTime?
  Preferences               Preference?
  playlist                  PlayList[]
}

model Preference {
  preferenceId String @id @default(uuid())
  userId       String @unique
  user         User   @relation(fields: [userId], references: [id])
  theme        String
}

model PlayList {
  playlistId   String @id @default(uuid())
  userId       String
  user         User   @relation(fields: [userId], references: [id])
  playlistName String
  song         Song[]

  @@unique([playlistName, userId], name: "UniquePlaylistNamePerUser")
}

model Song {
  songId   String     @id @default(uuid())
  songUrl  String     @unique
  playlist PlayList[]
}
